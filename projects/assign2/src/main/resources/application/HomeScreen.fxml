<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="application.Controllers.HomeScreenController">

    <TableView fx:id="bookTableView">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="title" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="authorColumn" text="Author" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="author" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <Button fx:id="borrowButton" text="Borrow" onAction="#borrowBook" />

</VBox>
